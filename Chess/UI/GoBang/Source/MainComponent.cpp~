void MainContentComponent::paint (Graphics& g)
{
    g.fillAll (Colour (0xff001F36));

    g.setFont (Font (16.0f));
    g.setColour (Colours::yellow);

    // 画棋盘
    for (int i = 0; i < CHESS_ROW_COUNT; i++) {
        // ������
        float startx = EDGE_SPACE;
        float starty = EDGE_SPACE + ((BOARD_HEIGHT - EDGE_SPACE << 1) / (CHESS_ROW_COUNT - 1)) * i;
        float endx = BOARD_WIDTH - EDGE_SPACE;
        float endy = starty;

        g.drawLine(startx, starty, endx, endy, 4);

        // ������
        startx = EDGE_SPACE + ((BOARD_WIDTH - EDGE_SPACE << 1) / (CHESS_COLUMN_COUNT - 1)) * i;
        starty = EDGE_SPACE;
        endx = startx;
        endy = BOARD_HEIGHT - EDGE_SPACE;
        g.drawLine(startx, starty, endx, endy, 4);
    }
}

